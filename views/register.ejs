<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  <link rel="stylesheet" href="/styles/style2.css">
  <script src="auth.js" defer></script>
</head>
<body>

  <div class="top-bar">
    <div class="top-center">
      <a href="https://ibb.co/rKH7shxR"><img src="https://i.ibb.co/bjXWJVsM/logo.png" alt="logo"></a>
      <h1>Quiz-All</h1>
    </div>

  </div>

  <!-- Register card -->
  <div class="auth-card">
    <form action="/register" method="post">
    <label for="username">Username</label>
    <input type="text" placeholder="username:" id="username" name="username">

    <label for="password">Password</label>
    <input type="password" placeholder="password:" id="registerPassword" name="password">

    <label>Confirm Password</label>
    <input type="password" placeholder="password" id="registerConfirmPassword" name="">

    <button id="registerBtn" type="submit">Register</button>
    </form>

    <div class="links">
      <a href="login.ejs">Already have an account? Sign in.</a>
    </div>
  </div>

</body>
</html>
