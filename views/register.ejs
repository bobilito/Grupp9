<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  <link rel="stylesheet" href="/styles/style2.css">
  <script src="auth.js" defer></script>
</head>
<body>

  <div class="top-bar">
    <div class="top-center">
      <img src="logo.png" alt="Logo">
      <span>TAGLINE GOES HERE</span>
    </div>

  </div>

  <!-- Register card -->
  <div class="auth-card">
    <form action="main.ejs">
    <label>Email</label>
    <input type="email" placeholder="Value" id="registerEmail">

    <label>Password</label>
    <input type="password" placeholder="Value" id="registerPassword">

    <label>Confirm Password</label>
    <input type="password" placeholder="Value" id="registerConfirmPassword">

    <button id="registerBtn">Register</button>
    </form>

    <div class="links">
      <a href="login.ejs">Already have an account? Sign in.</a>
    </div>
  </div>

</body>
</html>
